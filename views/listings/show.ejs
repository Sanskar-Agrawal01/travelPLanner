<% layout('layouts/boilerplate') %>
<body class="bg-gray-50 font-sans min-h-screen">
  <div class="max-w-6xl mx-auto px-6 py-12">

    <!-- Product Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start mb-16">
      
      <!-- Product Image -->
      <div class="w-full h-96 border rounded-xl overflow-hidden shadow-md">
        <img src="<%= listing.image.url %>" alt="<%= listing.title %>" 
             class="w-full h-full object-cover">
      </div>
      <div>
        <h1 class="text-4xl font-bold text-gray-800 mb-4"><%= listing.title %></h1>
        <% if(listing.price) { %>
  <p class="text-gray-900 font-semibold">‚Çπ<%= Number(listing.price).toLocaleString("en-IN") %> night</p>
<% } else { %>
  <p class="text-gray-900 font-semibold">Price not available</p>
<% } %>

        
        <p class="text-gray-700 text-lg leading-relaxed mb-6"><%= listing.description %></p>
        
        <p class="text-gray-600 text-lg mb-8">üìç <%= listing.location %>, <%= listing.country %></p>

        <!-- CTA -->
        <button class="bg-red-600 text-white px-8 py-4 rounded-xl shadow-lg transition w-full md:w-auto">
          Book Now
        </button>
      </div>
    </div>

    <!-- Reviews Section -->
 
    <a href="/listings/<%= listing._id %>/edit"
        class="inline-block bg-red-600 text-white font-semibold px-6 py-3 rounded-lg shadow-md transition">
        Edit 
     </a>

     <a href="/listings/<%= listing._id %>/delete"
        class="inline-block bg-red-600  text-white font-semibold px-6 py-3 rounded-lg shadow-md transition">
       Delete  
     </a>
     
  </div>
  
</body>
</html> 
